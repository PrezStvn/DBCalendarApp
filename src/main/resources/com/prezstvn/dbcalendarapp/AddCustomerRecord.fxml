<AnchorPane prefHeight="353.0" prefWidth="583.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prezstvn.dbcalendarapp.controller.AddCustomerController">
    <children>
        <Label layoutX="64.0" layoutY="43.0" text="Add Customer">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>

        <Label layoutX="69.0" layoutY="131.0" text="Customer_ID" />
        <TextField fx:id="CustomerId" disable="true" layoutX="164.0" layoutY="127.0" promptText="Auto Gen- Disabled" />
        <TextField fx:id="CustomerName" layoutX="164.0" layoutY="162.0" />
        <TextField fx:id="CustomerAddress" layoutX="164.0" layoutY="200.0" />
        <TextField fx:id="PostalCode" layoutX="164.0" layoutY="240.0" />
        <TextField fx:id="Phone" layoutX="162.0" layoutY="279.0" />

        <ComboBox fx:id="CountryComboBox" layoutX="406.0" layoutY="127.0" onAction="#onCountrySelection" prefWidth="150.0" promptText="Select a Country" />
