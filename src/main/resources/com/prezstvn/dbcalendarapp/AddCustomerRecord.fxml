        <Label layoutX="71.0" layoutY="166.0" text="Name" />
        <Label layoutX="71.0" layoutY="204.0" text="Address" />
        <Label layoutX="71.0" layoutY="244.0" text="Postal Code" />

        <Label layoutX="69.0" layoutY="283.0" text="Phone" />
      <Label layoutX="336.0" layoutY="131.0" text="Country" />
      <Label layoutX="336.0" layoutY="166.0" text="Division" />
        <Button fx:id="AddCustomerSave" layoutX="386.0" layoutY="279.0" mnemonicParsing="false" onAction="#onSaveClick" text="Save" />
        <Button fx:id="CancelButton" layoutX="466.0" layoutY="279.0" mnemonicParsing="false" onAction="#onCancelClick" text="Cancel" />

    </children>
</AnchorPane>
